<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homework.mhafidhabdulaziz.football_apps">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".FootBallClubApplication">
        <activity android:name=".view.activity.MainPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.FootBallClubDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.FootBallClubActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MatchScheduleDetailActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>